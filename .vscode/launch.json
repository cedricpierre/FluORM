{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Vitest",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "watch",
        "--inspect",
        "--reporter=verbose",
        "--no-file-parallelism"
      ],
      "autoAttachChildProcesses": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}